{
  "name": "expe-payment-gateway",
  "version": "1.0.0",
  "description": "Complete Payment Gateway BaaS - UPI/Google Pay style",
  "scripts": {
    "install:all": "node install-all.js",
    "dev": "pm2 start ecosystem.config.js",
    "dev:stop": "pm2 stop ecosystem.config.js",
    "dev:restart": "pm2 restart ecosystem.config.js",
    "dev:delete": "pm2 delete ecosystem.config.js",
    "dev:logs": "pm2 logs",
    "dev:monit": "pm2 monit",
    "dev:api-gateway": "cd services/api-gateway && npm run dev",
    "dev:auth": "cd services/auth-service && npm run dev",
    "dev:payment": "cd services/payment-service && npm run dev",
    "dev:webhook": "cd services/webhook-service && npm run dev",
    "dev:merchant": "cd services/merchant-service && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose up --build -d",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mihir-Rabari/fake-pe.git"
  },
  "keywords": [
    "payment-gateway",
    "upi",
    "baas",
    "microservices",
    "nodejs",
    "mongodb",
    "redis"
  ],
  "author": "Mihir Rabari",
  "license": "MIT",
  "dependencies": {
    "pm2": "^6.0.13"
  }
}
